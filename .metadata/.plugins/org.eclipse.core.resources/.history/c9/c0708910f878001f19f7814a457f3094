    <script>
        function updateCart(productId) {
            var quantityInput = document.getElementById("quantity_" + productId);
            var quantity = quantityInput.value;
            var form = document.getElementById("update-" + productId);
            form.quantity.value = quantity;
            form.submit();
        }
    </script>
