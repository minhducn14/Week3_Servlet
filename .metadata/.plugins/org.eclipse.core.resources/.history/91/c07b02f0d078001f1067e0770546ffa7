package modal;

import java.util.ArrayList;
import java.util.List;

public class ProductList {
	private static List<Product> productList = new ArrayList<>();

	static {
		productList.add(new Product(1, "iPhone 13", 999.99));
		productList.add(new Product(2, "Samsung Galaxy S21", 799.99));
		productList.add(new Product(3, "Google Pixel 6", 699.99));
		productList.add(new Product(4, "Sony Xperia 5", 899.99));
		productList.add(new Product(5, "OnePlus 9", 729.99));
	}

	public static List<Product> getAllProducts() {
		return productList;
	}

	public static Product getProductById(int id) {
		for (Product product : productList) {
			if (product.getId() == id) {
				return product;
			}
		}
		return null; 
	}

	public static void addProduct(Product product) {
		productList.add(product);
	}

	public static void removeProduct(int id) {
		productList.removeIf(product -> product.getId() == id);
	}
}
